exp := lit;
lit := num | str;

str := #"\"[^\"]*\"";

num := long | double | ratio | bign | octal | hex;
long := #"-?[0-9]+[lL]?";
double := #"-?[0-9]*\.[0-9]+([eE]-?[0-9]+)?"
        | #"-?Infinity"
        | #"-?NaN";
ratio := #"-?[0-9]+/-?[0-9]+";
bign := #"-?[0-9]+[nN]";
octal := #"-?0[0-7]+"
hex := #"-?0x[0-9a-fA-F]+"