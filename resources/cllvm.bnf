exp := lit;
lit := num | str;

str := #"\"[^\"]*\"";

num := long | double | ratio | bign | bigdec | octal | hex | radix;
long := #"-?[0-9]+[lL]?";
double := #"-?[0-9]*\.[0-9]+([eE]-?[0-9]+)?"
        | #"-?Infinity"
        | #"-?NaN";
ratio := #"-?[0-9]+/-?[0-9]+";
bign := #"-?[0-9]+[nN]";
bigdec := #"-?[0-9]*\.[0-9]+([eE]-?[0-9]+)?M"
octal := #"-?0[0-7]+"
hex := #"-?0x[0-9a-fA-F]+"
radix := #"-?([2-9]|[12][0-9]|3[0-6])r[0-9a-zA-z]+"